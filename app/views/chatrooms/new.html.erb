<div class='left-right-margin'>
  <%- if current_user.admin? %>
    <h2>CREATE CHATROOM</h2>

    <%= form_for(@chatroom) do |f| %>
      <div class='field'>
        <%= f.label :name, 'Name:' %></br>
        <%= f.text_field :name %>
      </div>

      <%= f.hidden_field :owner_id, value: current_user.id %>

      <div class='field'>
        <%= f.submit 'Create' %>
      </div>
    <%- end -%>
  <%- else -%>
    redirect_to root_path
  <%- end -%>
</div>
